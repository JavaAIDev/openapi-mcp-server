<configuration>

  <property name="LOG_DIR" value="${LOG_DIR:-/tmp/openapi-mcp-server}"/>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${LOG_DIR}/server.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/server.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <immediateFlush>true</immediateFlush>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.modelcontextprotocol" level="DEBUG" additivity="false">
    <appender-ref ref="FILE"/>
  </logger>

  <root level="INFO">
    <appender-ref ref="FILE"/>
  </root>

</configuration>
